{% extends 'layout/admin.twig' %}

{% block options %}
	<h1 class="h2">Products</h1>
{% endblock %}
{% block content %}
	<div class="table-responsive">
		{{ form | raw }}
			<table class="table table-striped table-sm text-center">
				<thead>
					<tr>
						<th>Id</th>
						<th>title</th>
						<th>slug</th>
						<th>description</th>
						<th>cover</th>
						<th>publish</th>
						<th>date_at</th>
						<th>created_at</th>
						<th>updated_at</th>
					</tr>
				</thead>
				<tbody>
					{% for item in items %}
						<tr>
							<td>{{ item.id }}</td>
							<td>{{ item.title }}</td>
							<td>
								<a href="{{ path("eventsBooking", {id: item.id, slug: item.slug})}}">{{ item.slug }}</a>
							</td>
							<td>{{ item.description }}</td>
							<td>{{ item.cover }}</td>
							<td>{{ item.publish }}</td>
							<td>{{ item.dateAt | date("d/m/Y") }}</td>
							<td>{{ item.createdAt | date("d/m/Y") }}</td>
							<td>
								{% if item.updatedAt %}
									{{ item.updatedAt | date("d/m/Y") }}
								{% endif %}
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</tbody>
		</table>
	</div>
{% endblock %}
