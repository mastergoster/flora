		<div style="text-align: right">Date:
			{{ invoce.dateAt | date("d/m/Y", "Europe/Paris") }}</div>

		<table width="100%" style="font-family: serif;" cellpadding="10">
			<tr>
				<td width="45%" style="border: 0.1mm solid #888888; ">
					<span style="font-size: 7pt; color: #555555; font-family: sans;">Pour :</span><br/><br/>
					{% if user.society %}
						{{ user.society }}
					{% else %}
						{{ user.firstName }}
						{{ user.lastName }}
					{% endif %}<br>
					{{ user.street }}<br/>
					{{ user.postalCode }}
					-
					{{ user.city }}<br/>
					{{ user.phoneNumber }}</td>
				<td width="10%">&nbsp;</td>
				<td width="45%" style="border: 0.1mm solid #888888;">
					Assoc. COWORKINMOULINS<br/>
					<span style="font-size: 7pt; font-family: sans;">1 pl. Mar. de Lattre de Tassigny<br/>
						03000 - Moulins<br/><br/></span>
					ATTENTION LES PAIEMENTS :<br/>
					- PAR VIREMENT<br/>
					- EN ESPÈCES / CHÈQUES<br/>
					 NE SONT PLUS ACCEPTÉS.
				</td>
			</tr>
		</table><br/>
		{% if user.society %}
			<table width="100%" style="font-family: serif;" cellpadding="10">
				<tr>
					<td width="100%" style="border: 0.1mm solid #888888;">Utilisateur :
						{{ user.firstName }}
						{{ user.lastName }}
					</td>
				</tr>
			</table>
			<br/>
		{% endif %}
		<table width="100%" style="font-family: serif;" cellpadding="10">
				<tr>
					<td width="100%" style="border: 0.1mm solid #888888;text-align: center;">
					{% if invoce.statePaiement is same as(false) %}
						<a href="{{ path('charge', {'id': invoce.id}, true)}}?token={{ invoce.securityToken }}">Lien de payement</a>
					{% elseif invoce.statePaiement <= 0  %}
						Payé
					{% else %}
						<a href="{{ path('charge', {'id': invoce.id}, true)}}?token={{ invoce.securityToken }}">Lien de payement</a>
					{% endif %}
					</td>
				</tr>
			</table>
			<br/>
		<table class="items" width="100%" style="font-size: 9pt; border-collapse: collapse; " cellpadding="8">
			<thead>
				<tr>
					<td width="15%">Ref.</td>
					<td width="10%">Qte</td>
					<td width="45%">Description</td>
					<td width="15%">Prix Unitaire</td>
					<td width="15%">Prix Total</td>
				</tr>
			</thead>
			<tbody>
				<!-- ITEMS HERE -->
				{% for line in invoce.getInvocesLines %}
					<tr class="line">
						<td align="center">{{ line.ref }}</td>
						<td align="center">{{ line.qte }}</td>
						<td>{{ line.desc }}</td>
						<td class="cost">{{ (line.price)|number_format(2, '.', ',') }}
							€</td>
						<td class="cost">{{ (line.qte * line.price)|number_format(2, '.', ',')}}
							€</td>
					</tr>
				{% endfor %}
				<!-- END ITEMS HERE -->
				<tr class="result">
					<td class="blanktotal" colspan="3" rowspan="6"></td>
					<td class="totals">
						<b>TOTAL:</b>
					</td>
					<td class="totals cost">
						<b>{{ invoce.price }}
							€</b>
					</td>
				</tr>

			</tbody>
		</table>
		<div style="text-align: center; font-style: italic;">TVA non applicable, article 293 B du Code général des impôts. Numéro siret : 88825067700018
		</div>
